{% set route = app.request.attributes.get('_route') %}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {# #TODO Titre par défaut à changer #}
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Inclusion des fichiers CSS et CND #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% block css %}
            {# Inclusion CSS individuels si besoin#}
        {% endblock %}
    </head>

        {# Menu principal #}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Logo du site</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link{{ route == 'home' ? ' active' }}" href="{{ path('home') }}"><i class="fas fa-home mx-1"></i>Accueil</a>
                        </li>
                    </ul>

                    {# Boutons à droite #}
                    <ul  class="navbar-nav ms-auto me-3">

                        {# si l'utilisateur est connecté #}
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="dropdown-item" href="{{ path('logout') }}"><i class="fas fa-sign-out-alt me-1"></i>Déconnexion</a>
                            </li>
                        {% else %}  {# Boutons si l'utilisateur n'est pas connecté #}
                            <li class="nav-item">
                                <a class="nav-link{{ route == 'register' ? ' active' }}" href="{{ path('register') }}"><i class="fas fa-user-plus mx-1"></i>Inscription</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link{{ route == 'login' ? ' active' }}" href="{{ path('login') }}"><i class="fas fa-sign-in-alt mx-1"></i>Connexion</a>
                            </li>
                        {% endif %}

                    </ul>

                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Chercher dans le forum">
                        <button class="btn btn-outline-success" type="submit">Rechercher</button>
                    </form>
                </div>
            </div>
        </nav>


    <body>
        {% block body %}{% endblock %}

    {# Inclusions des fichiers JS généraux du site #}
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>

    {% block javascripts %}
        {# Inclusion JS individuels si besoin#}
    {% endblock %}

    </body>
</html>
